<!-- Evento Scroll -->
<script type = "text/javascript">

var modal = 0;
$(document).ready(function(){
   window.onscroll = function() {scrollFunction()};
  });

  function scrollFunction() {
      if (document.body.scrollTop >(window.outerHeight)/2 || document.documentElement.scrollTop > (window.outerHeight)/2 && modal<1) {
        $("#miModal").modal('show');
        modal++;
      }

      }
</script>


